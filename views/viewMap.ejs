<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= map[0].title %> - View Map</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/navbar.css">
  <!-- leaflet css file -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <!-- Below script for points on map document -->
  <script>
    //Technically dont need to JSON.parse(''), but 
    // including it so it doesnt show error on vscode from ejs perspective
    const points = JSON.parse('<%- JSON.stringify(points) %>');
  </script>
  <!--  Below script for rendering map -->
  <script defer src="/scripts/view-map-w-points.js"></script>
  <!-- leaflet js file -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
</head>

<body>
  <!-- Include the navigation bar -->
  <%- include('partials/navbar') %>
    <!-- <h1>Have fun! ðŸ¥”</h1> -->

    <main style="margin: 1em; margin-top: 23vh;">
      <h3><%= map[0].title %></h3>
      <!-- Map -->
      <!-- Map code -->
      <div class="map-box-profile" id="map"></div>
      <!-- End of Map code-->


      <main class="content" style="margin: 1em;">

        <div class="table-box-home">
          <h3>List of Map Points for <%= map[0].title %></h3>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Point Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
              </tr>
            </thead>
            <tbody>
              <% for (let point of points) { %>
                <tr>
                  <td>
                    <%= point['title'] %>
                  </td>
                  <td>
                    <%= point['description'] %>
                  </td>
                  <td><a href="<%= point.image %>">Link</a></td>
                </tr>
                <% } %>

            </tbody>
          </table>
          <div class="card-footer text-muted">
            <p class="card-text" style="text-align: center;">
              <!-- <a href="#" style="display: inline-block;"><button class="btn btn-outline-primary">Create a new Map</button></a> -->
            </p>
          </div>
        </div>
</body>

</html>